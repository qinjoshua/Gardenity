<img class="plot" src="/images/grass.jpg" alt="Workplace" usemap="#workmap">
<map name="workmap">
    <area id="window" shape="rect" coords="34,44,270,350" alt="Computer">
</map>


<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2>Plot Name</h2>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="left">
            <h2>Plants</h2>
            <div id="plantCards"></div>
        </div>
        <div class="middle" style="background-color:#5cb85c">
            <h2>Tasks</h2>
            <div id="taskCards"></div>
        </div>
        <div class="right">
            <h2>People</h2>
            <div id="peopleCards"></div>
        </div>
      </div>
    </div>
  </div>

</div>

<script>
    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("window");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal 
    btn.onclick = function() {
    modal.style.display = "block";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
    modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
    }


    const templateContainer = (dataEntry) => `<div class="card"><div class="container">${dataEntry.column1}</div></div>`;

    const setupEach = (element, data) => {
        body = document.getElementById(element);

        const div = document.createElement('div');
        for (let i = 0; i < data.length; i++){
            createRow(div, data[i])
        }

        body.appendChild(div);
    }

    const setup = () => {
        var dataPlants = [
            { column1: 'Tomatos'},
            { column1: 'Squash'}
        ];
        var dataTask = [
            { column1: 'Water 11/12'},
            { column1: 'Water 11/28'},
            { column1: 'Water 11/29'},
            { column1: 'Water 12/29'},
            { column1: 'Water 12/29'},
            { column1: 'Water 12/29'},
            { column1: 'Water 12/29'},
            { column1: 'Water 12/29'}
        ];
        var dataPeople = [
            { column1: 'Bob'},
            { column1: 'Alice'}
        ];
        var cols = [{col: 'plantCards', data: dataPlants}, {col: 'taskCards', data: dataTask}, {col: 'peopleCards', data: dataPeople}]
        for (let i = 0; i < cols.length; i++){
            setupEach(cols[i].col, cols[i].data)
        }
    }

    const createRow = (target, data) => {
        const html = templateContainer(data);
        target.insertAdjacentHTML('beforeend', html);
    }

    window.addEventListener('load', setup);
</script>